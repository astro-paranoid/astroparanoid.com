<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
  <title>Astro-Paranoid</title>
</head>
<body>
  <header>
    <%- include('../layout/header') %>
  </header>
  <%- include('../layout/nav-bar') %>
  <h2 id="date">
    <%=asteroids.length %> Total Asteroids in Database
    <br>
  </h2>
  <br>
  <p>(click on asteroids for more info)</p>
  <main id="content-wrapper">
    <%asteroids.forEach((asteroid) => { %>
        <article class="asteroid-container" style="width: 200px">
          <a href="/location/<%= asteroid.id %>" class="asteroid-link">
            <img src="<%= asteroid.img%>" alt="" class="asteroid-image" data-size="<%= Math.floor(asteroid.diameter_feet_max) %>" style="width: 100px">

            <div class="name-size">
              <h4><%= asteroid.name %></h4>
            </div>
          </a>
      </article>
    </a>
    <%})%>
  </main>
  <script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous">
  </script> 
  <script src="../../js/app.js"></script>
</body>
</html>
