<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
  <title>Astro-Paranoid</title>
</head>
<body>
  <header>
    <%- include('../layout/header')%>
  </header>
  <main id="content-wrapper">
    <h2 id="date">Asteroids on <%= Date(asteroidsForDay.asteroids[0].closest_date).slice(0,15) %></h2>
    <%asteroidsForDay.asteroids.forEach((asteroid, idx) => { %>
      <a href="/location/<%asteroid.id%>">
        <article class="asteroid-container">

        <img src="/images/asteroid<%=idx%8%>.png" alt="" class="asteroid-image" data-size="<%= Math.floor(asteroid.diameter_feet_max) %>" style="width: <%=Math.floor((asteroid.diameter_feet_max/asteroidsForDay.maxSize) * 75)%>%">

        <div class="name-size">
          <h4>Name: <%= asteroid.name %></h4>
          <h6>Size: <%= asteroid.diameter_feet_min.toFixed(2) %> - <%= asteroid.diameter_feet_max.toFixed(2) %> feet</h6>
          <h6>Will miss Earth by: <%= asteroid.miss_distance_miles %> miles</h6>
        </div>

        <!-- <div class="location-input">
          <form action="/location" method="post">
            <input type="text" name="search" placeholder="Enter a City" required>
            <fieldset>
              <label for ="map">
                <button type="submit">Search for City</button>
            </fieldset>
          </form>
        </div> -->
      </article>
    </a>
    <%})%>   
  </main>

  <footer>
    <%- include('../layout/footer')%>
  </footer>
</body>
</html>
