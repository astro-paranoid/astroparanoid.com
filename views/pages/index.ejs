<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
  <title>Astro-Paranoid</title>
</head>
<body>
  <header>
    <%- include('../layout/header')%>
  </header>
  <nav class="fixed-nav">
  <ul>
    <li class="nav-item">
      <a class="nav-item-link" href="/">
        <i class="fas fa-home fa-2x" id="home-icon"></i>
        <span class="nav-text">Home</span>
      </a>
    </li>
    <li class="nav-item" >
      <a class="nav-item-link" href="/about">
        <i class="fas fa-users fa-2x" id="about-icon">
        </i>
        <span class="nav-text">About</span>
      </a>
    </li>
    <li class="nav-item" >
        <a class="nav-item-link" href="/info">
          <i class="fas fa-book fa-2x" id="info-icon"></i>
          <span class="nav-text">Info</span>
        </a>
      </li>
  </ul>
</nav>
  <h2 id="date">
    <%=asteroidList.asteroids.length %> Asteroids 
    <br>
    <br>
    Near Earth on <%= asteroidList.asteroids[0].closest_date %>
  </h2>
  <br>
  <p>(click on asteroids for more info)</p>
  <main id="content-wrapper">
    <%asteroidList.asteroids.forEach((asteroid) => { %>
      <a href="/location/<%= asteroid.id %>" class="asteroid-link">
        <article class="asteroid-container">
        <img src="<%= asteroid.img%>" alt="" class="asteroid-image" data-size="<%= Math.floor(asteroid.diameter_feet_max) %>" style="width: <%=Math.floor((asteroid.diameter_feet_max/asteroidList.maxSize) * 75)%>%">

        <div class="name-size">
          <h4><%= asteroid.name %></h4>
          <h6><%= Number(asteroid.diameter_feet_min).toFixed(2) %> - <%= Number(asteroid.diameter_feet_max).toFixed(2) %> feet wide</h6>
          <h6>Will miss Earth by <%= Number(asteroid.miss_distance_miles).toFixed(2) %> miles</h6>
        </div>
        
      </article>
    </a>
    <button class="likedbutton" id="<%= asteroid.id %>">
      <i class="fas fa-heart"></i>
    </button>
    <%})%>
  </main>

  <footer>
    <%- include('../layout/footer')%>
  </footer>
  <script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous">
  </script> 
  <script src="../../js/app.js"></script>
</body>
</html>
